<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpoo.bsi.ufrpe.organictrade.OrganicTradeControler.user.gui.UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/verdeParaTudo"
        android:layout_weight="0.3">
        <TextView
            android:text="HistÃ³rico"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/accent300"
        android:layout_weight="0.1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/historicImgSelling"
            android:clickable="true"
            android:layout_weight="1"/>
        <ImageView
            android:visibility="visible"
            android:clickable="true"
            android:id="@+id/historicImgBuying"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:orientation="horizontal"
        android:background="@color/accent300">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:text="Vendas"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_weight="0.75"
            android:textAlignment="center"
            android:text="Compras"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/shadow_101322"
        android:layout_weight="1">
        <ListView
            android:id="@+id/historicListListView"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>
