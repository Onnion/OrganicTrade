<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mpoo.bsi.ufrpe.organictrade.OrganicTradeControler.GUI.RegisterUserActivity">

    <EditText
        android:id="@+id/registerUserEdtName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/hntName"
        />

    <EditText
        android:id="@+id/registerUserEdtLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/hntLogin"
        />

    <EditText
        android:id="@+id/registerUserEdtPassword"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textPassword"
        android:hint="@string/hntPassword"
        />

    <EditText
        android:id="@+id/registerUserEdtRepeatPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textPassword"
        android:hint="@string/hntPasswordConfirmation"
        />

    <EditText
        android:id="@+id/registerUserEdtEmail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/hntEmail"
        />

    <EditText
        android:id="@+id/registerUserEdtPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="text|phone"
        android:ems="10"
        android:hint="@string/hntPhone"
        />

    <Button
        android:id="@+id/registerUserBtnRegister"
        android:background="@color/verdeParaTudo"
        android:textColor="#ffff"
        android:text="@string/btnRegister"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="cadastrarUsuario"
        />

</LinearLayout>