<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpoo.bsi.ufrpe.organictrade.OrganicTradeControler.GUI.ContactActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/verdeParaTudo"
        android:weightSum="1">

        <TextView
            android:textSize="50sp"
            android:textAlignment="center"
            android:text="Marcio"
            android:textColor="#ffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:id="@+id/contatTextName" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#ffff">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/shadow_101322"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_shopping_basket_black_48dp"
                    android:id="@+id/imageView12"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/contatTextProductName"
                        android:text="banana"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="2 unidades"
                        android:textAlignment="center"
                        android:id="@+id/contatTextProductAmount"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/contatTextProductPrice"
                        android:text="10 reais"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                >
                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_phone_black_48dp"
                    android:id="@+id/imageView"/>

                <TextView
                    android:text="(81) 99833-4195"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contatTextPhone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_location_on_black_48dp"
                    android:id="@+id/imageView1"/>


                <TextView
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:text="Rua JosÃ© P. de Oliveira"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
