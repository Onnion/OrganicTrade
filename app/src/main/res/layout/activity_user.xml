<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpoo.bsi.ufrpe.organictrade.OrganicTradeControler.GUI.UserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/verdeParaTudo"
        android:layout_weight="0.3">
        <TextView
            android:id="@+id/userTextName"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Marcio"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/accent300"
        android:layout_weight="0.1">
        <ImageView
            android:id="@+id/userImgBtnToCadastro"
            android:src="@mipmap/ic_add"
            android:layout_width="0dp"
            android:clickable="true"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/userImgBtnToEdit"
            android:layout_width="0dp"
            android:visibility="visible"
            android:clickable="true"
            android:src="@mipmap/ic_edit"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/userImgBtnToSearch"
            android:layout_width="0dp"
            android:visibility="visible"
            android:clickable="true"
            android:src="@mipmap/ic_search"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:clickable="true"
            android:src="@mipmap/ic_logout"
            android:id="@+id/userImgBtnLogout"
            android:layout_width="0dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/action"
        android:layout_margin="5dp"
        android:background="@drawable/shadow_101322"
        android:layout_weight="1">
        <ListView
            android:id="@+id/usuarioListViewList"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</LinearLayout>
