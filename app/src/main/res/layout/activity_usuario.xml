<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mpoo.bsi.ufrpe.organictrade.OrganicTradeControler.GUI.UsuarioActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/usuarioListViewList"
        android:layout_below="@+id/usuarioTextName"
        android:layout_marginTop="160dp" />

    <Button
        android:text="Sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:onClick="sair"
        android:layout_alignTop="@+id/usuarioImgButnToCadastro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SurfaceView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/colorTeste"
        android:background="@color/verdeParaTudo"
        android:longClickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/logout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#ffffff"
        android:id="@+id/usuarioTextName"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logout"
        android:layout_toStartOf="@+id/logout" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/colorTeste"
        android:layout_alignRight="@+id/usuarioImgButnToCadastro"
        android:layout_alignEnd="@+id/usuarioImgButnToCadastro"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/usuarioTextName" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/usuarioImgButnToCadastro"
        android:layout_marginTop="84dp"
        android:visibility="visible"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:layout_below="@+id/usuarioTextName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
